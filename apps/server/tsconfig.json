{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ES2021",
    "moduleResolution": "Node",
    "rootDir": "src",
    "outDir": "dist",
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "emitDecoratorMetadata": false,
    "experimentalDecorators": false,
    "noEmit": true
  },
  "include": ["src"],
  "exclude": ["dist", "node_modules"]
}

